<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<BorderPane prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.ServerController">
    <top>
        <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               style="-fx-background-color: black; -fx-text-fill: white;" text="CHAT SERVER V1.0"
               BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </top>
    <right>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Connection">
                <fx:include source="tab/connectiontab.fxml"/>
            </Tab>
            <Tab fx:id="imagesTab" disable="true" text="Images">
                <fx:include source="tab/imagestab.fxml"/>
            </Tab>
        </TabPane>
    </right>
    <center>
        <ScrollPane fx:id="sp_main" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;"
                    BorderPane.alignment="CENTER">
            <TextFlow fx:id="messageBoard" prefHeight="337.0" prefWidth="399.0" style="-fx-background-color: white;"/>
        </ScrollPane>
    </center>
    <bottom>
        <fx:include source="bottom.fxml"/>
    </bottom>
</BorderPane>
