<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ServerController">
    <top>
        <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               style="-fx-background-color: black; -fx-text-fill: white;" text="CHAT SERVER V1.0"
               BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </top>
    <right>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.99995117187498" minWidth="10.0"
                                   prefWidth="95.99995498657225"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.80000839233398" minWidth="10.0"
                                   prefWidth="102.40004501342773"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="btnStop" disable="true" mnemonicParsing="false" onAction="#btnHandler"
                        styleClass="chat-button" text="Stop Server" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <Button fx:id="btnStart" mnemonicParsing="false" onAction="#btnHandler"
                        stylesheets="@../stylesheets/chatserver.css" text="Start Server" GridPane.columnIndex="1"
                        GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Button>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Server Name"
                       GridPane.columnIndex="1"/>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Port" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Maximum Guest"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField fx:id="txtServerName" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="txtServerPort" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="txtMaximumGuest" prefHeight="26.0" prefWidth="114.0" GridPane.columnIndex="2"
                           GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TextField>
            </children>
        </GridPane>
    </right>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <left>
                <Label styleClass="chat-label" stylesheets="@../stylesheets/chatserver.css" text="General Message"
                       BorderPane.alignment="CENTER"/>
            </left>
            <right>
                <Button fx:id="btnSendMessage" disable="true" mnemonicParsing="false" onAction="#btnHandler"
                        styleClass="chat-button" stylesheets="@../stylesheets/chatserver.css" text="Send Message!"
                        BorderPane.alignment="CENTER"/>
            </right>
            <center>
                <TextField fx:id="txtMessage" disable="true" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </bottom>
    <center>
        <TextFlow prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;"
                  BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
