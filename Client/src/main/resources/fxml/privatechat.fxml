<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="270.0" prefWidth="310.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PrivateChatController">
    <Label text="Conversation with: " />
    <ScrollPane prefHeight="200.0" prefWidth="200.0">
        <TextFlow lineSpacing="10.0" prefHeight="172.0" prefWidth="306.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </TextFlow>
    </ScrollPane>
    <HBox prefHeight="41.0" prefWidth="310.0">
        <TextField fx:id="textField" prefHeight="26.0" prefWidth="262.0" />
        <Button fx:id="btnSend" mnemonicParsing="false" text="Send" />
    </HBox>
    <FlowPane alignment="CENTER" hgap="10.0" prefHeight="34.0" prefWidth="310.0" vgap="10.0">
        <Button fx:id="btnClear" mnemonicParsing="false" text="Clear" />
        <Button fx:id="btnIgnoreUser" mnemonicParsing="false" text="Ignore User" />
        <Button fx:id="btnClose" mnemonicParsing="false" text="Close" />
        <Button fx:id="btnEmotions" mnemonicParsing="false" text="Emotions" />
    </FlowPane>
</VBox>
